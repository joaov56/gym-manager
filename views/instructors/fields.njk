<form class="card" method="POST" action="/instructors">

    <section class="avatar" style="background: url(https://source.unsplash.com/collection/8353395/500x500) no-repeat center center / cover"></section>
    <section class="details">

        <div class="item">
            <div>Instrutor</div>
            <div>
                <input type="text" name="name" id="" autocomplete="off" value="{{instructor.name}}">
            </div>
        </div>
        <div class="item">
            <div>Avatar URL</div>
            <div>
                <input type="url" name="avatar_url" id="" placeholder="http://" value="{{instructor.avatar_url}}">
            </div>
        </div>
        <div class="item">
            <div>Data de nascimento</div>
            <div>
                <input type="date" name="birth" id="" value="{{instructor.birth}}">
            </div>
        </div>
        <div class="item">
            <div>Sexo</div>
            <div>
                <span><input type="radio" name="gender" id="" value="M" {% if instructor.gender=="M" %} checked="checked" {% endif %}>Masculino</span>
                <span><input type="radio" name="gender" id="" value="F" {% if instructor.gender=="F" %} checked="checked" {% endif %}>Feminino</span>

            </div>
        </div>

        <div class="item">
            <div>Áre de atuação</div>
            <div>
                <input type="text" name="services" id="" placeholder="Separe os serviços prestados por vírgula" value="{{instructor.services}}">
            </div>
        </div>

        <button type="submit">Salvar</button>
    </section>
</form>