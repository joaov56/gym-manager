{% extends "layout.njk" %}

{% block content %}
    <div class="card table-container">
        <a href="/members/create">Adicionar novo membro</a>
        <table>
            <thead>
                <tr>
                    <th>Membro</th>
                    <th>Email</th>
                    <th>Peso</th>
                    <th>Altura</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
                {%for member in members%}
                    <tr>
                        <td>
                            <span style="background-image: url({{member.avatar_url}})"></span>
                            {{member.name}}
                        </td>

                        <td>{{member.email}}</td>

                        <td>{{member.weight}}
                        </td>
                        <td>{{member.height}}</td>
                        <td>
                            <a href="/members/{{member.id}}">ver</a>
                        </td>

                    </tr>
                    {%endfor%}
                </tbody>
            </table>

        </div>

    {% endblock content %}